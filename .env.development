# Development Environment Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_interview_platform
REDIS_URL=redis://localhost:6379

# JWT Configuration (Development keys - change in production)
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# OAuth Configuration (Development - use your own keys)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (Development - use mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
FROM_EMAIL=noreply@ai-interview-platform.local
FROM_NAME=AI Interview Platform (Dev)

# Stripe Configuration (Test keys)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-test-webhook-secret

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1500

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=mp3,mp4,wav,webm

# Rate Limiting (More lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Session Configuration
SESSION_SECRET=dev-session-secret-not-for-production
SESSION_MAX_AGE=86400000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev

# Security Configuration
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
TOKEN_EXPIRY_HOURS=24

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# Analytics Configuration
ANALYTICS_ENABLED=false
ANALYTICS_RETENTION_DAYS=30

# Feature Flags
ENABLE_OAUTH=true
ENABLE_MAGIC_LINKS=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=false
ENABLE_ANALYTICS=false